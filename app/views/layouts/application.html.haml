!!! 5
%html
  %head
    %meta(charset="utf-8")/
    %title= controller.action_name
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails'
    = stylesheet_link_tag 'reset', 'jquery-ui'
    = formtastic_stylesheet_link_tag
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
  %body(lang="en")
    #header
      %h1=link_to 'Ballpark', events_path
      .logout=link_to "Log out", destroy_user_session_path if user_signed_in?
      .edgecase=link_to 'EdgeCase &rarr;'.html_safe, 'http://edgecase.com'
    #container
      - if notice.present?
        %p.notice= notice
      - if alert.present?
        %p.alert=alert
      = yield
